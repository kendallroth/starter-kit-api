{
  "name": "@starter-kit-api/server",
  "version": "1.0.0",
  "description": "Simple API server for `starter-kit` projects",
  "author": "Kendall Roth <kendall@kendallroth.ca>",
  "license": "MIT",
  "files": ["build"],
  "main": "./build/index.js",
  "module": "./build/index.mjs",
  "types": "./build/index.d.ts",
  "scripts": {
    "prebuild": "npm run codegen",
    "build": "tsup ./src/index.ts --format cjs,esm --dts --clean --out-dir build",
    "codegen": "tsoa spec-and-routes && copyfiles src/generated/swagger.json build --up 2",
    "dev": "npm run build -- --watch --ignore-watch src/generated --on-success 'npm run codegen && node dev-server.js'",
    "lint": "npm run lint:code && npm run lint:types",
    "lint:code": "biome check src/ --apply",
    "lint:types": "tsc"
  },
  "dependencies": {
    "@starter-kit-api/shared": "*",
    "dayjs": "^1.11.10",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "fast-sort": "^3.4.0",
    "jsonwebtoken": "^9.0.2",
    "lowdb": "github:dankreiger/lowdb#chore/esm-cjs-hybrid-WITH-LIB",
    "swagger-ui-express": "^5.0.0",
    "ts-deepmerge": "^6.2.0",
    "tsoa": "^5.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "copyfiles": "^2.4.1"
  }
}
